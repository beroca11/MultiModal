# AI Provider API Keys (at least one is required)
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Search API Keys (optional but recommended)
# Tavily API for enhanced web search
TAVILY_API_KEY=your_tavily_api_key_here

# Optional: Other API keys
SERPER_API_KEY=your_serper_api_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/deepresearch
SQLITE_DB_PATH=./data/research.db

# Research Configuration
MAX_RESEARCH_ITERATIONS=5
RESEARCH_TIMEOUT=300
MAX_SOURCES_PER_TOPIC=10

# AI Provider Configuration
# Set your preferred AI provider: openai, anthropic, or google
PREFERRED_AI_PROVIDER=openai

# Model Configuration
# OpenAI Models
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Anthropic Models
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4000

# Google Models
GOOGLE_MODEL=gemini-pro
GOOGLE_TEMPERATURE=0.7
GOOGLE_MAX_TOKENS=4000 